<Window x:Class="MessageServer.View.ConnectSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MessageServer"
        mc:Ignorable="d" 
        ResizeMode="NoResize" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Network Interface" />
        <ComboBox Grid.Row="1" ItemsSource="{Binding Path=NetworkInterfaces}"
                  SelectedItem="{Binding Server.IpAddress}"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="ConnectButton" Content="Connect" Click="ConnectButton_Click" />
            <Button Name="CancelButton" Content="Cancel" Margin="6 0 0 0" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
